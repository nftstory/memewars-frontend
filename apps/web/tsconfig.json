{
  "extends": "../../tooling/tsconfig/nextjs.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "react-native": [
        "react-native-web"
      ],
      "@styles/*": [
        "./public/styles/*"
      ],
      "@api/*": [
        "../../packages/api/*"
      ],
      "@db/*": [
        "../../packages/db/*"
      ],
      "@design-system/*": [
        "../../packages/design-system/*"
      ],
      "@app/*": [
        "../../packages/app/*"
      ],
      "@utils/*": [
        "../../packages/utils/*"
      ]
    },
    "plugins": [
      {
        "name": "next"
      }
    ],
    "strictNullChecks": true
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}